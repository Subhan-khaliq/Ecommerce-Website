<div class="center jumbotron">
  <h2>
    <% if params[:search].blank? %>

      <%if current_user %>
        ADMIN --- All Orders (<%= @orders.count %>)
      <%else%>
        USER --- All Orders (<%= @current_user.orders.count %>)
      <%end%>
    <%else %>
      Found => [
      <%= pluralize(@orders.count, " ] Order") %>
    <%end %>
  </h2>
</div>

<% @orders.each do |order| %>
  <%= render 'order' , :order => order%>
<% end %>
