<table>
  <thead>
    <tr>
      <th>Comments</th>
    </tr>
  </thead>

  <tbody>
   <% @product.comments.each do |comment| %>
      <tr>
        <td id = "this_comment_<%= comment.id %>"><%= comment.content %></td>
          <% if current_user.is_writer?(current_user.id, comment.user_id) %>
            <td><%= link_to 'Destroy', product_comment_url(@product, comment), method: :delete, remote: true, class: "remove_comment" %></td>
            <td><%= link_to 'Edit', edit_product_comment_url(@product, comment), remote: true %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

