<table>
  <thead>
    <tr>
      <th>Comments</th>
    </tr>
  </thead>

  <tbody>
   <% commentable.comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>

        <td><%= link_to 'Destroy', [@product, comment], method: :delete, remote: true, class: "btn btn-primary" %></td>
         <td><%= link_to 'Edit', edit_product_comment_path(@product), method: :update %></td>
      </tr>
    <% end %>
  </tbody>
</table>
